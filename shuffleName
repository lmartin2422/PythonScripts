"""
Create a function that takes a string (will be a person's first and last name)
and returns a string with the first and last name swapped.
"""


def shuffle_name(full_name):
    name_parts = full_name.split()
    # print(name_parts)

    if len(name_parts) != 2:
        return f"Error! Name must be 2 parts, {full_name}"

    first_name, last_name = name_parts

    print(f"Reverse name is {last_name}, {first_name}")


shuffle_name("Barack Obama")
print(shuffle_name("Barack Obama Jr"))



